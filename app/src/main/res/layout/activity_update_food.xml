<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allActivity.UpdateFoodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red">
            <ImageView
                android:id="@+id/imgbackUp"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:contentDescription="back"
                android:src="@drawable/ic_action_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa món ăn"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Tên món ăn(*)"/>
        <EditText
            android:id="@+id/nameFoodUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tên..."
            android:layout_margin="10sp"
            android:padding="8sp"
            android:background="@drawable/border_ed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Mô tả món ăn(*)"/>

        <EditText
            android:id="@+id/descriptionFoodUp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10sp"
            android:background="@drawable/border_ed"
            android:gravity="start"
            android:hint="Mô tả..."
            android:padding="8sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Giá món ăn(*)"/>
        <EditText
            android:id="@+id/priceFoodUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Giá..."
            android:layout_margin="10sp"
            android:padding="8sp"
            android:background="@drawable/border_ed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Khuyến mại(*)"/>
        <EditText
            android:id="@+id/saleFoodUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Khuyến mại..."
            android:layout_margin="10sp"
            android:padding="4sp"
            android:drawableRight="@drawable/ic_action_sale"
            android:background="@drawable/border_ed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Link ảnh món ăn(*)"/>
        <EditText
            android:id="@+id/imageFoodUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Link ảnh..."
            android:layout_margin="10sp"
            android:padding="4sp"
            android:background="@drawable/border_ed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Link ảnh banner(*)"/>
        <EditText
            android:id="@+id/imageBannerUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Link ảnh banner..."
            android:layout_margin="10sp"
            android:padding="4sp"
            android:background="@drawable/border_ed"/>
        <CheckBox
            android:id="@+id/ckPopularUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10sp"
            android:textSize="18sp"
            android:text="Phổ biến"
            android:background="@drawable/border_ed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="16sp"
            android:text="Link ảnh khác"/>
        <EditText
            android:id="@+id/imageOtherUp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Hình ảnh khác..."
            android:layout_margin="10sp"
            android:inputType="text"
            android:padding="4sp"
            android:gravity="start"
            android:background="@drawable/border_ed"/>
        <Button
            android:id="@+id/btnUpdateFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa món ăn"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_margin="10sp"
            android:background="@drawable/border_btn"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>