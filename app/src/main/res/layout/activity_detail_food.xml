<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".allActivity.DetailFood">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red">
            <ImageButton
                android:id="@+id/imgBackDetail"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@null"
                android:contentDescription="back"
                android:src="@drawable/ic_action_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chi tiết món ăn"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imgCart"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@null"
                android:contentDescription="back"
                android:src="@drawable/ic_action_cart1" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="img"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/tvSaleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giam 15%"
                android:padding="4sp"
                android:layout_gravity="end"
                android:layout_margin="10sp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/bordersale"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvNameDeatail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rau muong xao toi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: "
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvPriceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tvPriceDetailOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textSize="20sp"
                android:layout_marginStart="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10sp"
            android:background="@drawable/bordersale"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:layout_marginStart="10sp"
            android:textColor="@color/red"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvDescriptionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả món ăn"
            android:layout_marginStart="10sp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Một số hình ảnh khác"
            android:layout_margin="10sp"
            android:textColor="@color/red"
            android:textSize="18sp"/>
        <GridView
            android:id="@+id/RecyImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"/>
        <Button
            android:id="@+id/btnAddcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/white"
            android:layout_margin="10sp"
            android:textSize="18sp"
            android:background="@drawable/border_btn"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>