<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="10"
     android:gravity="center_vertical"
     android:layout_margin="5sp">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="3.3">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgFooditem"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:contentDescription="food"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/tvSaleItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Giam 15%"
                    android:textSize="12sp"
                    android:padding="3sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:background="@drawable/bordersale"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginStart="4sp"
         android:layout_weight="5.7">
         <TextView
             android:id="@+id/tvnameFoodItem"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="xuon sao chua ngot"
             android:textColor="@color/black"
             android:textSize="25sp"
             android:textStyle="bold"/>
         <TextView
             android:id="@+id/tvPriceOle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="200000"
             android:textSize="20sp"
             android:textStyle="bold"/>
         <TextView
             android:id="@+id/tvPriceitem"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="50000"
             android:textSize="20sp"
             android:textColor="@color/red"
             android:textStyle="bold"/>
         <TextView
             android:id="@+id/tvPopular"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Phổ biến :sdcs"
             android:textSize="18sp"
             android:textStyle="bold"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight="1">
         <ImageButton
             android:id="@+id/imgEdit"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:background="@null"
             android:contentDescription="edit"
             android:src="@drawable/ic_action_edit"/>
         <ImageButton
             android:id="@+id/imgDelete"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:background="@null"
             android:layout_marginVertical="15dp"
             android:contentDescription="delete"
             android:src="@drawable/ic_action_delete"/>
     </LinearLayout>
 </LinearLayout>
    <TextView
        android:id="@+id/tvDescriptionitem"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="thom ngon tu mõm mgot tu nuoc cat khong can phai lo lo"/>
</LinearLayout>